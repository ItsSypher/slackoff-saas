# SlackOff Environment Configuration
# Copy this file to .env and modify as needed

# Application Configuration
APP_NAME=SlackOff
APP_VERSION=1.0.0
APP_ENVIRONMENT=production

# Server Configuration
SERVER_PORT=80
SERVER_HOST=0.0.0.0

# Domain Configuration (update for production)
DOMAIN_NAME=localhost
SSL_ENABLED=false

# Apache Configuration
APACHE_SERVER_ADMIN=admin@slackoff.terrible
APACHE_SERVER_NAME=localhost
APACHE_LOG_LEVEL=warn

# Security Configuration
SECURITY_HEADERS_ENABLED=true
COMPRESSION_ENABLED=true
CACHING_ENABLED=true

# Monitoring Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30s

# Docker Configuration
DOCKER_RESTART_POLICY=unless-stopped
DOCKER_MEMORY_LIMIT=512m
DOCKER_CPU_LIMIT=0.5

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_RETENTION_DAYS=7

# Terrible Features Configuration (for maximum chaos)
ENABLE_MOVING_BUTTONS=true
ENABLE_AUTO_TRANSLATION=true
ENABLE_ANNOYING_SOUNDS=true
ENABLE_RAINBOW_BACKGROUND=true
ENABLE_COMIC_SANS=true
ENABLE_FAKE_ERRORS=true
CHAOS_LEVEL=maximum
